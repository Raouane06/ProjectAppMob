<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Horizontal layout for Module Name, Coefficient, and Credit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Module Name -->
        <TextView
            android:id="@+id/moduleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Module Name"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Coefficient -->
        <TextView
            android:id="@+id/moduleCoefficient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coef: 0"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>

        <!-- Credit -->
        <TextView
            android:id="@+id/moduleCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | Credit: 0"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Horizontal layout for TD, TP, and Exam scores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/tdScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="TD score"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/edittext_border"/>

        <EditText
            android:id="@+id/tpScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="TP score"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/edittext_border"/>

        <EditText
            android:id="@+id/examScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="Exam score"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/edittext_border"/>
    </LinearLayout>

</LinearLayout>
